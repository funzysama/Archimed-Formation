{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} Menu Principal{% endblock %}
{% block body_title %}{{ parent() }}{% endblock %}
{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <h3>Bonjour {{ app.user.sexe|formatSexe }} {{ app.user.nom }} {{ app.user.prenom }}</h3>
        {% if is_granted('ROLE_ADMIN') %}
            {% include '/inc/menu-admin.html.twig' %}
        {% elseif is_granted('ROLE_CONSULTANT') %}
            {% include '/inc/menu-admin.html.twig' %}
        {% elseif is_granted('ROLE_USER') %}
            {% include '/inc/menu.html.twig' %}
        {% endif %}
    </div>
{% endblock %}
