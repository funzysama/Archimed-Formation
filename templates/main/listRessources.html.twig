{% extends 'main-base.html.twig' %}

{% block page_subtitle %}
    Espace Ressources
{% endblock %}
{% block stylesheets %}
{{ parent() }}
    <style>
        table.dataTable thead th, table.dataTable thead td {
            padding: 10px 18px;
            border-bottom: 1px solid rgba(0, 0, 0, 0.15);
        }
    </style>
{% endblock %}
{% block page_content %}
    <div class="col-sm-9 margin-h-center">
        <div class="main-card mb-3 card">
            <div class="card-header">
                <div class="d-flex flex-row justify-content-between align-items-center full-width">
                    <div class="col-sm-6 d-flex justify-content-start">
                        <div>
                            Espace Ressources
                        </div>
                    </div>
                    <div class="col-sm-6 d-flex justify-content-end">
                        <div class="dataTables_wrapper no-footer d-flex justify-content-center">
                            <div id="searchBox"></div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="table-responsive" data-controller="listeRes">
                <table class="align-middle full-width mb-0 table table-borderless table-hover row-border" id="dataTable">
                    <thead>
                        <tr>
                            <th></th>
                        </tr>
                    </thead>

                    <tbody>
                    {% for ressource in ressources %}
                            <tr>
                                <td class="widget-content-left text-left">
                                    <a href="{{ ressource.url }}" target="_blank">
                                        <div class="widget-content p-0">
                                            <div class="widget-content-wrapper text-left">
                                                <div class="widget-content-left mr-3">
                                                    <img src="{{ asset('uploads/ressources/images/'~ressource.image ) }}" alt="" width="42">
                                                </div>
                                                <div class="widget-content-left">
                                                    <div class="widget-heading">{{ ressource.nom }}</div>
                                                    <div class="widget-subheading" style="text-overflow: ellipsis;">
                                                        <p>{{ ressource.description }}</p>
                                                        <p>{{ ressource.url }}</p>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </a>
                                </td>
                            </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}

