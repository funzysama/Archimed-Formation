{% extends 'main-base.html.twig' %}

{% block title %}
    {{ parent() }}API Pole-Emploi
{% endblock %}
{% block page_title %}Fiches ROME{% endblock %}
{% block page_content %}
    <div class="col-lg-12 margin-h-center" data-controller="poleEmploi">
        <div class="main-card mb-3 card">
            <div class="table-responsive col-sm-12 marginTop1 marginBot1 dataTables_wrapper dt-jqueryui">
                <input type="hidden" value="{{ type }}" name="type" id="type">
                <input type="hidden" value="{{ riasecMajeur }}" name="riasecMajeur" id="riasecMajeur">
                <input type="hidden" value="{{ riasecMineur }}" name="riasecMineur" id="riasecMineur">
                <table class="display" id="dataTable" data-tableData="{{ data }}" style="max-width: calc(100vw - 30px);"></table>
            </div>
        </div>
    </div>
{% endblock %}
